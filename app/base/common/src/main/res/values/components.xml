<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BindingBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TextInputLayout.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/text.secondary</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/text.secondary</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/text.secondary</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="DropdownLayout.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundMode">outline</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/text.secondary</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/text.secondary</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/text.secondary</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="TextInputEditText.Form" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/text.edit</item>
        <item name="android:textColorHint">@color/text.secondary</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="BaseToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_toolbar_rounded</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/Text.Subtitle1.SemiBold</item>
    </style>

    <style name="CircleShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedShapeBottom.10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="RoundedShapeTop.5" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="RoundedShape.10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="RoundedTabLayout" parent="Widget.MaterialComponents.TabLayout" >
        <item name="android:background">@drawable/bg_tab_rounded_5</item>
        <item name="tabBackground">@color/text.secondary.27</item>
        <item name="tabTextColor">@color/text.edit.inverse</item>
        <item name="tabSelectedTextColor">@color/text.edit.inverse</item>
        <item name="tabIndicatorAnimationDuration">150</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">30dp</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicator">@drawable/bg_tab_indicator_rounded_5</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/Text.Body3</item>
    </style>

    <style name="TopRoundedBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TopRoundedModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TopRoundedBottomSheetDialogStyle" parent="TopRoundedBottomSheetTheme" />


    <style name="TopRoundedModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_top_5</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="materialButtonStyle">@style/CustomMaterialButtonStyle</item>
    </style>

    <style name="CustomMaterialButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.Cookigo.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="Button.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.ButtonChip</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="chipMinHeight">25dp</item>
        <item name="android:selectable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/text.edit</item>
        <item name="android:textAppearance">@style/Text.Body3</item>
    </style>

    <style name="ThemeOverlay.ButtonChip" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

</resources>